<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="shop.mtcoding.blog.model.LikeRepository">

  <select id="findAll" resultType="shop.mtcoding.blog.model.Like">
    select * from like_tb
  </select>

  <select id="findAl" resultType="shop.mtcoding.blog.dto.like.LikeReq$LikeReqDto">
      select * from like_tb
  </select>

  <insert id="insert">
      insert into like_tb(user_id, board_id, like_num) VALUES (#{userId}, #{boardId}, #{likeNum})
  </insert>

  <select id="findByLikeNum" resultType="shop.mtcoding.blog.model.Like">
      select * from like_tb where user_id = #{id}  
  </select>
    
    <select id="findByUserIdAndBoardId" resultType="shop.mtcoding.blog.model.Like">
      select * from like_tb where user_id = #{userId} and board_id = #{boardId}  
  </select>

	<delete id="deleteById">
	   delete from like_tb where user_id = #{id}
	</delete>

  

  
</mapper>